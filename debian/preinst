#!/bin/sh -e

case "$1" in
    install|upgrade)
        getent passwd gnatsd > /dev/null || \
            adduser --system --group --home /var/lib/gnatsd gnatsd
        ;;
    abort-upgrade)
        ;;
    *)
        echo "Preinst called with unknown argument '$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
